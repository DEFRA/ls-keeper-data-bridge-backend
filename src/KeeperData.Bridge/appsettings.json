{
  "Mongo": {
    "DatabaseUri": "mongodb://set-automatically-when-deployed/admin?authSource=$external&authMechanism=MONGODB-AWS",
    "DatabaseName": "ls-keeper-data-bridge-backend",
    "EnableTransactions": false,
    "HealthcheckEnabled": true
  },
  "MongoResilience": {
    "MaxRetryAttempts": 3,
    "InitialDelayMs": 500,
    "TimeoutSeconds": 30,
    "EnableCircuitBreaker": true,
    "CircuitBreakerFailureRatio": 0.5,
    "CircuitBreakerMinimumThroughput": 10,
    "CircuitBreakerBreakDurationSeconds": 30,
    "UseJitter": true
  },
  "AllowedHosts": "*",
  "TraceHeader": "x-cdp-request-id",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Elastic.CommonSchema.Serilog.EcsTextFormatter, Elastic.CommonSchema.Serilog"
        }
      }
    ]
  },
  "AWS": {
    "Region": "eu-west-2",
    "EMF": {
      "Namespace": "ls-keeper-data-bridge-backend",
      "ServiceName": "KeeperData.Bridge"
    },
    "Metrics": {
      "MeterName": "KeeperData"
    }
  },
  "StorageConfiguration": {
    "ExternalStorage": {
      "HealthcheckEnabled": true,
      "BucketName": "Set in cdp-app-config (or for local development using docker-compose.override.yml)",
      "AccessKeySecretName": "IMB_S3_ACCESS_KEY",
      "SecretKeySecretName": "IMB_S3_ACCESS_SECRET"
    },
    "InternalStorage": {
      "HealthcheckEnabled": true,
      "BucketName": "Set in cdp-app-config (or for local development using docker-compose.override.yml)"
    },
    "SourceExternalPrefix": "litprd",
    "SourceInternalPrefix": "qasrc",
    "TargetInternalPrefix": "dest"
  },
  "ServiceBusSenderConfiguration": {
    "DataBridgeEventsTopic": {
      "HealthcheckEnabled": true,
      "TopicName": "ls-keeper-data-bridge-events",
      "TopicArn": ""
    }
  },
  "Quartz": {
    "Scheduler": {
      "InstanceName": "KeeperDataBridgeScheduler"
    },
    "Jobs": [
      {
        "JobType": "ImportBulkFilesJob",
        "Enabled": true,
        "CronSchedule": "0 0 8 * * ?"
      },
      {
        "JobType": "ImportDeltaFilesJob",
        "Enabled": true,
        "CronSchedule": "0 0 9 * * ?"
      }
    ]
  },
  "FeatureFlags": {
    "AuthenticationEnabled": false
  }
}
